					<semantic:FullscreenPage id="page" navButtonPress="onNav_Back" showNavButton="true" title="Shirt Details">
						<semantic:content>
							<VBox id="idbpx1" class="sapUiSmallMargin" fitContainer="true">
								<f:SimpleForm id="objDetails" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
									adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
									singleContainerFullSize="false">
									<f:content>
										<Label id="idlab1" text="External Code"/>
										<Input id="id_externalCode" value="{shirt>/externalCode}" editable="false" enabled="false"/>
										<!---->
										<Label id="idlab2" text="Color"/>
										<Input id="id_cust_ShirtColor" value="{shirt>/cust_ShirtColor}" editable="{/editableInput}"/>
										<!---->
										<Label id="idlab3" text="Size"/>
										<Input id="id_cust_ShirtSize" value="{shirt>/cust_ShirtSize}" editable="{/editableInput}" />
										<!---->
										<Label id="idlab4" text="Employee"/>
										<Input id="id_cust_Employee" value="{shirt>/cust_Employee}" editable="{/editableInput}"/>
										<!---->
									</f:content>
								</f:SimpleForm>
							</VBox>
						</semantic:content>
						<semantic:customFooterContent>
						<Button id="deleteButton" press=".onDelete" icon="sap-icon://delete" text="Delete" tooltip="Delete"
										visible="{/removeVisibleBtn}"/>		
							<Button id="editButton" press=".onEdit" icon="sap-icon://edit" text="Edit" tooltip="Edit"
										visible="{/editVisibleBtn}"/>		
							<Button id="saveButton" press=".onSave" icon="sap-icon://save" text="Save" tooltip="Save"
										visible="{/saveVisibleBtn}"/>	
								<Button id="cancelButton" press=".onCancel" icon="sap-icon://cancel" text="Cancel" tooltip="Cancel"
										visible="{/cancelVisibleBtn}"/>	
						</semantic:customFooterContent>
