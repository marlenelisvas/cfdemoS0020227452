<mvc:View controllerName="com.xtendhr.web.controller.CallService"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" navButtonPress="onNavBack" showNavButton="true">
        <content>
            <Panel expand="true" headerText="Web Services Application" width="auto" class="sapUiResponsiveMargin" expandable="false">
                <content>
                    <Label id="idInpLbl" text="Get Service Path: "></Label>
                    <Input id="idInput"></Input>
                    <Button id="idBtn" press="onCallSRV" text="Call Service"></Button>
                    <TextArea id="idTextarea" growing="true" width="100%"></TextArea>
                </content>
			</Panel>
        </content>
    </Page>
</mvc:View>
